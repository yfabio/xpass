<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import orange.tech.xpass.fx.TextFieldTableCellFactory?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="orange.tech.xpass.controller.HomeController">
	<children>
		<VBox styleClass="home">
			<children>
				<Accordion>
					<panes>
						<TitledPane text="Filter">
							<content>
								<VBox styleClass="home">
									<children>
										<Label text="Search" />
										<HBox styleClass="home_search">
											<children>
												<Button fx:id="btnSearch" mnemonicParsing="false" prefWidth="50.0">
													<graphic>
														<FontIcon iconLiteral="fas-search" iconSize="16" />
													</graphic>
												</Button>
												<TextField fx:id="txtSearch" HBox.hgrow="ALWAYS" />
											</children>
											<VBox.margin>
												<Insets bottom="5.0" />
											</VBox.margin>
										</HBox>
									</children>
								</VBox>
							</content>
						</TitledPane>
					</panes>
				</Accordion>
				<TableView fx:id="keys" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn text="Date">
							<cellValueFactory>
								<PropertyValueFactory property="date" />
							</cellValueFactory>
							<cellFactory>
								<TextFieldTableCellFactory />
							</cellFactory>
						</TableColumn>
						<TableColumn text="Note">
							<cellValueFactory>
								<PropertyValueFactory property="note" />
							</cellValueFactory>
							<cellFactory>
								<TextFieldTableCellFactory />
							</cellFactory>
						</TableColumn>
						<TableColumn text="Username">
							<cellValueFactory>
								<PropertyValueFactory property="username" />
							</cellValueFactory>
							<cellFactory>
								<TextFieldTableCellFactory />
							</cellFactory>
						</TableColumn>
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>
		</VBox>
	</children>
</StackPane>

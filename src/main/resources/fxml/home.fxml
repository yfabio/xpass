<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import orange.tech.xpass.fx.TextFieldTableCellFactory?>
<?import orange.tech.xpass.fx.PasswordFieldTableCellFactory?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane stylesheets="@../css/style.css"
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="orange.tech.xpass.controller.HomeController">
	<children>
		<VBox styleClass="home">
			<children>
				<Accordion>
					<panes>
						<TitledPane text="Filter">
							<content>
								<VBox styleClass="home">
									<children>
										<Label text="Search" />
										<HBox styleClass="home_search">
											<children>
												<Button mnemonicParsing="false" prefWidth="50.0">
													<graphic>
														<FontIcon iconLiteral="fas-search" iconSize="16" />
													</graphic>
												</Button>
												<TextField HBox.hgrow="ALWAYS" />
											</children>
											<VBox.margin>
												<Insets bottom="5.0" />
											</VBox.margin>
										</HBox>
										<Separator />
										<Label text="Date" />
										<GridPane styleClass="home_date_search">
											<columnConstraints>
												<ColumnConstraints />
												<ColumnConstraints minWidth="10.0" />
											</columnConstraints>
											<rowConstraints>
												<RowConstraints minHeight="10.0"
													prefHeight="30.0" vgrow="SOMETIMES" />
												<RowConstraints minHeight="10.0"
													prefHeight="30.0" vgrow="SOMETIMES" />
												<RowConstraints minHeight="10.0"
													prefHeight="30.0" vgrow="SOMETIMES" />
											</rowConstraints>
											<children>
												<AnchorPane prefWidth="50.0">
													<children>
														<Label text="From" AnchorPane.bottomAnchor="0.0"
															AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
															AnchorPane.topAnchor="0.0" />
													</children>
												</AnchorPane>
												<AnchorPane GridPane.rowIndex="1">
													<children>
														<Label text="To" AnchorPane.bottomAnchor="0.0"
															AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
															AnchorPane.topAnchor="0.0" />
													</children>
												</AnchorPane>
												<AnchorPane GridPane.columnIndex="1"
													GridPane.hgrow="ALWAYS">
													<children>
														<DatePicker AnchorPane.bottomAnchor="0.0"
															AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
															AnchorPane.topAnchor="0.0" />
													</children>
												</AnchorPane>
												<AnchorPane GridPane.columnIndex="1"
													GridPane.rowIndex="1">
													<children>
														<DatePicker AnchorPane.bottomAnchor="0.0"
															AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
															AnchorPane.topAnchor="0.0" />
													</children>
												</AnchorPane>
												<HBox alignment="CENTER_LEFT" GridPane.columnIndex="1"
													GridPane.rowIndex="2">
													<children>
														<Button mnemonicParsing="false"
															styleClass="home_date_search_button" text="apply" />
													</children>
												</HBox>
											</children>
										</GridPane>
									</children>
								</VBox>
							</content>
						</TitledPane>
					</panes>
				</Accordion>
				<TableView fx:id="keys"
					tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn text="Date">
							<cellValueFactory>
								<PropertyValueFactory property="date" />
							</cellValueFactory>
							<cellFactory>
								<TextFieldTableCellFactory />
							</cellFactory>
						</TableColumn>
						<TableColumn text="Note">
							<cellValueFactory>
								<PropertyValueFactory property="note" />
							</cellValueFactory>
							<cellFactory>
								<TextFieldTableCellFactory />
							</cellFactory>
						</TableColumn>
						<TableColumn text="Username">
							<cellValueFactory>
								<PropertyValueFactory property="username" />
							</cellValueFactory>
							<cellFactory>
								<TextFieldTableCellFactory />
							</cellFactory>
						</TableColumn>
						<TableColumn text="Password">
							<cellValueFactory>
								<PropertyValueFactory property="password" />
							</cellValueFactory>
							<cellFactory>
								<PasswordFieldTableCellFactory />
							</cellFactory>
						</TableColumn>
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>
		</VBox>
	</children>
</StackPane>

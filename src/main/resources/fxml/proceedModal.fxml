<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@../css/style.css"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="orange.tech.xpass.controller.ProceedModalController">
	<children>
		<VBox spacing="5.0" styleClass="modal_container">
			<children>
				<AnchorPane>
					<children>
						<Label alignment="CENTER" prefHeight="22.0"
							prefWidth="400.0" text="Type your password to allow this."
							AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
							AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
							<padding>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</padding>
							<font>
								<Font name="SansSerif Regular" size="16.0" />
							</font>
						</Label>
					</children>
				</AnchorPane>
				<PasswordField fx:id="password" />
				<StackPane>
					<children>
						<Button fx:id="ok" mnemonicParsing="false"
							prefWidth="100.0" styleClass="modal_action_buttons" text="ok"
							StackPane.alignment="CENTER_LEFT" />
						<Button fx:id="cancel" mnemonicParsing="false"
							prefWidth="100.0" styleClass="modal_action_buttons" text="cancel"
							StackPane.alignment="CENTER_RIGHT" />
					</children>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
				</StackPane>
			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</VBox>
	</children>
</StackPane>
